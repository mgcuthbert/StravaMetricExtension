{
    "manifest_version": 3,
    "name": "Strava Metric Extension",
    "version": "0.1.0",
    "description": "Simply adds either imperial metric if using standard or vica versa.",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "64": "icons/icon_64.png",
        "128": "icons/icon_128.png"
    },
    "content_scripts": [{
        "js": ["metricExtension.js"],
        "matches": ["https://*.strava.com/*"]
    }],
    "host_permissions": ["https://github.com/*"]
}
